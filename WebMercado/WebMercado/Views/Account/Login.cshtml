@model LoginViewModel
@{
    ViewData["Title"] = "Login";

}

<!--================Login Box Area =================-->
    <section class="login_box_area section-margin " style="padding-top: 100px !important; padding-bottom: 100px !important;">
        <div class="login container">
            <div class="row">
                <div class="chegar col-lg-6">
                    <div class="login_box_img">
                        <div class="hover">
                            <h4>Acabou de Chegar?</h4>
                            <p class="mt-3">Utilize o botão abaixo para criar uma conta e continuar visitando e comprando em nossa Loja!!!</p>
                            <a class="btn btn-danger button button-login" asp-controller="Account" asp-action="Register">Criar uma Conta</a>
                        </div>
                    </div>
                </div>
                <div class="logincor col-lg-6">
                    <div class="login_form_inner">
                        <h3>Login</h3>
                        <form class="row login_form mt-3" asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" hidden></div>
                            <div class="col-md-12 form-group">
                                <input asp-for="Email" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group">
                                <input asp-for="Senha" class="form-control">
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group">
                                <div class="creat_account">
                                    <input type="checkbox" id="f-option2" asp-for="Manter">
                                    <label asp-for="Manter"></label>
                                </div>
                            </div>
                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="btn btn-danger button button-login w-100">Entrar</button>
                                <a asp-action="ForgotPassword">Esqueci Minha Senha?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
<!--================End Login Box Area =================-->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <script type="text/javascript">
        var elemento = $(".validation-summary-errors");
        if (elemento.length != 0) {
            swal({
                title: "Acesso Negado",
                text: elemento[0].childNodes[0].childNodes[0].innerHTML,
                icon: "error",
                button: "OK"
            });
        }
    </script>
}