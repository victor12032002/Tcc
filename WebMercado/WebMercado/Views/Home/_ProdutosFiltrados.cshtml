@model IEnumerable<Produto>

<div class="filter__item">
    <div class="row">
        <div class="col-lg-4 col-md-5">
            <div class="filter__sort">
                <span>Listar por: </span>
                <select>
                    <option value="0">Default</option>
                    <option value="0">Default</option>
                </select>
            </div>
        </div>
        <div class="col-lg-4 col-md-4">
            <div class="filter__found">
                <h6><span>@ViewData["Numero"]</span> Produtos encontrados</h6>
            </div>
        </div>
        <div class="col-lg-4 col-md-3">
            <div class="filter__option">
                <span class="icon_grid-2x2"></span>
                <span class="icon_ul"></span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @if (Model.Count() != 0)
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="product__item">
                    <div class="product__item__pic set-bg" data-setbg="@Url.Content(item.Imagem)">
                        <ul class="product__item__pic__hover">
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                            <li><a href="" data-ajax="true" data-ajax-url="@Url.Action("Adicionar", "Cart", new { id = item.Id })" data-ajax-update="#cartPartial" data-ajax-complete="adicionado"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="product__item__text">
                        <h6><a href="#">@item.Nome</a></h6>
                        <h5>@string.Format("R$ {0:N2}", item.ValorVenda)</h5>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h1>Sem produtos para exibição</h1>
    }
</div>

@if (Model.Count() != 0)
{
    <div class="product__pagination">
        <a href="#">1</a>
        <a href="#">2</a>
        <a href="#">3</a>
        <a href="#"><i class="fa fa-long-arrow-right"></i></a>
    </div>
}